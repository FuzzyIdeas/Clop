{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Swift Build",
            "type": "shell",
            "command": "swift build",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Swift: Run File",
            "type": "shell",
            "command": "swift ${file}",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$swiftc",
        },
        {
            "label": "Xcode: Build & Run",
            "type": "shell",
            "command": "osascript -e 'tell application \"Xcode\" to run the first workspace document'",
            "problemMatcher": [],
            "presentation": {
                "reveal": "silent",
                "panel": "shared"
            }
        }
    ]
}
